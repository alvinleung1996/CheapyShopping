<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.alvin.cheapyshopping.fragments.ProductInfoFragment">

    <data class="ProductInfoFragmentBinding">
        <variable
            name="product"
            type="com.alvin.cheapyshopping.db.entities.Product"/>

        <variable
            name="bestPrice"
            type="com.alvin.cheapyshopping.db.entities.pseudo.StorePrice"/>

        <variable
            name="bestPriceDate"
            type="String"/>
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginBottom="5dp"
                android:focusableInTouchMode="true">

                <ImageView
                    android:id="@+id/image_product"
                    android:layout_width="0dp"
                    android:layout_height="280dp"
                    android:background="@drawable/background_product_image"
                    android:contentDescription="Product Image"
                    android:elevation="2dp"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:src="@drawable/ic_product_black_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>



                <ImageView
                    android:id="@+id/image_edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/background_circule_light_blue"
                    android:padding="7dp"
                    android:elevation="2dp"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:tint="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>



                <TextView
                    android:id="@+id/text_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{product != null ? product.name : `Not yet computed`}"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:background="@color/colorAccent"
                    android:elevation="2dp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/image_product"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style= "@style/CustomRatingBar"
                    android:id="@+id/ratingBar"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="0.01"
                    android:elevation="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:isIndicator="false"
                    app:layout_constraintTop_toBottomOf="@id/text_product_name"
                    app:layout_constraintStart_toStartOf="parent"/>


                <TextView
                    android:id="@+id/text_best_price_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Best price: $"
                    android:padding="4dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/text_best_price"/>

                <TextView
                    android:id="@+id/text_best_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{bestPrice != null ? Double.toString(bestPrice.total) : `Not yet computed`}"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/ratingBar"
                    app:layout_constraintStart_toEndOf="@id/text_best_price_title"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/text_best_price_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{`(` + bestPriceDate != null ? bestPriceDate : `Not yet computed` + `)`}"
                    android:textStyle="italic"
                    android:padding="4dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/text_best_price"
                    app:layout_constraintEnd_toEndOf="@id/text_best_price"/>
                <TextView
                    android:id="@+id/text_product_description_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description:"
                    android:padding="4dp"
                    app:layout_constraintTop_toBottomOf="@id/text_best_price_title"/>
                <TextView
                    android:id="@+id/text_product_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_marginBottom="5dp"
                    android:text="@{product != null ? product.description : `Not yet computed`}"
                    app:layout_constraintTop_toBottomOf="@id/text_product_description_title"/>
            </android.support.constraint.ConstraintLayout>



        </LinearLayout>

            <!-- This initially-hidden ImageView will hold the expanded/zoomed version of
            the images above. Without transformations applied, it takes up the entire
            screen. To achieve the "zoom" animation, this view's bounds are animated
            from the bounds of the thumbnail button above, to its final laid-out
            bounds.
            -->

            <!--<ImageView-->
                <!--android:id="@+id/image_product_zoomed"-->
                <!--android:contentDescription="Product Image zoomed"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@color/white"-->
                <!--android:src="@drawable/ic_product_black_24dp"-->
                <!--android:visibility="invisible"-->
                <!--/>-->
        </FrameLayout>


    </android.support.v4.widget.NestedScrollView>


</layout>