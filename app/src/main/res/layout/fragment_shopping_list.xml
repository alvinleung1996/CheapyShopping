<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.alvin.cheapyshopping.fragments.ShoppingListFragment">

    <data class="ShoppingListFragmentBinding">
        <variable
            name="shoppingList"
            type="com.alvin.cheapyshopping.db.entities.ShoppingList"/>
    </data>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusableInTouchMode="true">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

            <TextView
                android:id="@+id/text_shopping_list_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{`Center Longitude: `+Double.toString(shoppingList.centerLongitude)+`, Latitude: `+Double.toString(shoppingList.centerLatitude)}"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_shopping_list_items"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="true"/>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</layout>
