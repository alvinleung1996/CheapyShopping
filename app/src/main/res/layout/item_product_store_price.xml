<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ProductStorePriceItemBinding">
        <variable
            name="storePrice"
            type="com.alvin.cheapyshopping.db.entities.pseudo.StorePrice"/>
        <variable
            name="date"
            type="String"/>
        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/list_item_background"
        android:elevation="2dp"
        android:layout_marginTop="3dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider">
        </View>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/layout_store_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{onClickListener::onClick}"
                android:paddingBottom="5dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/image_store_photo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="Product photo"
                    android:src="@drawable/ic_store_black_24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/text_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:text="@{storePrice.store.name}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    app:layout_constraintStart_toEndOf="@+id/image_store_photo"
                    app:layout_constraintTop_toTopOf="@id/image_store_photo"/>

                <ImageView
                    android:id="@+id/image_store_verification"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_check_circle_black_24dp"
                    android:tint="@color/lightBlue"
                    app:layout_constraintStart_toEndOf="@id/text_store_name"
                    app:layout_constraintTop_toTopOf="@id/image_store_photo"/>

                <ImageView
                    android:id="@+id/image_store_location"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="12dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:tint="@color/grey"
                    app:layout_constraintStart_toEndOf="@+id/image_store_photo"
                    app:layout_constraintTop_toBottomOf="@+id/text_store_name"/>

                <TextView
                    android:id="@+id/text_store_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@{storePrice.store.address}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/image_store_location"
                    app:layout_constraintTop_toBottomOf="@id/text_store_name"/>
            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@id/layout_store_info">
            </View>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_store_product_price_info"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                app:layout_constraintTop_toBottomOf="@id/layout_store_info">

                <TextView
                    android:id="@+id/text_price_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Price: $"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_store_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@{Double.toString(storePrice.total)}"
                    app:layout_constraintBaseline_toBaselineOf="@+id/text_price_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/text_price_title" />

                <TextView
                    android:id="@+id/text_price_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@{`Price ID: ` + storePrice.priceId}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBaseline_toBaselineOf="@+id/text_price_title" />

                <ImageView
                    android:id="@+id/image_price_update"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_update_time_black_24dp"
                    android:padding="3dp"
                    android:layout_marginStart="2dp"
                    android:tint="@color/grey"
                    app:layout_constraintTop_toBottomOf="@id/text_price_title"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/text_price_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{date}"
                    android:textStyle="italic"
                    app:layout_constraintStart_toEndOf="@id/image_price_update"
                    app:layout_constraintTop_toBottomOf="@id/text_store_price"/>

            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</layout>
