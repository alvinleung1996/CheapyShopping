<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="SettingsFragmentBinding"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/lightGrey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/lightGrey">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/box_settings_push_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/account_fragment_box_padding_inner"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/image_settings_push_notification"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_notifications_black_24dp"
                    android:tint="@color/white"
                    android:padding="2dp"
                    android:background="@drawable/background_settings_icon_type1"
                    android:elevation="2dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/text_settings_push_notification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Enable Push Notification "
                    android:layout_marginStart="15dp"
                    app:layout_constraintStart_toEndOf="@id/image_settings_push_notification"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"                    />

                <Switch
                    android:id="@+id/switch_settings_push_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/text_settings_push_notification"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/box_settings_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:padding="@dimen/account_fragment_box_padding_inner"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/image_settings_terms"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_terms_black_24dp"
                    android:tint="@color/white"
                    android:padding="2dp"
                    android:background="@drawable/background_settings_icon_type2"
                    android:elevation="2dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/text_settings_terms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Terms"
                    android:layout_marginStart="15dp"
                    app:layout_constraintStart_toEndOf="@id/image_settings_terms"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"                    />

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider">
            </View>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/box_settings_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/account_fragment_box_padding_inner"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/image_settings_privacy"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_security_black_24dp"
                    android:tint="@color/white"
                    android:padding="2dp"
                    android:background="@drawable/background_settings_icon_type2"
                    android:elevation="2dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/text_settings_privacy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy"
                    android:layout_marginStart="15dp"
                    app:layout_constraintStart_toEndOf="@id/image_settings_privacy"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"                    />

            </android.support.constraint.ConstraintLayout>



        </LinearLayout>


    </ScrollView>

</layout>