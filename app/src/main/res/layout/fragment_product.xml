<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.alvin.cheapyshopping.fragments.ProductFragment">

    <data class="ProductFragmentBinding">
        <variable
        name="product"
        type="com.alvin.cheapyshopping.db.entities.Product"/>

        <variable
        name="bestPrice"
        type="com.alvin.cheapyshopping.db.entities.pseudo.StorePrice"/>

        <variable
            name="bestPriceDate"
            type="String"/>
    </data>

    <!--<data class="ProductFragmentBinding">-->
        <!--<variable-->
            <!--name="product"-->
            <!--type="com.alvin.cheapyshopping.db.entities.Product"/>-->

        <!--<variable-->
            <!--name="bestPrice"-->
            <!--type="com.alvin.cheapyshopping.db.entities.Price"/>-->
    <!--</data>-->

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginBottom="5dp"
                android:focusableInTouchMode="true">

                <ImageView
                    android:id="@+id/image_product"
                    android:contentDescription="Product Image"
                    android:layout_width="0dp"
                    android:layout_height="280dp"
                    android:background="@color/white"
                    android:elevation="2dp"
                    android:src="@drawable/ic_product_black_24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />



                <TextView
                    android:id="@+id/text_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{product != null ? product.name : `Not yet computed`}"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:background="@color/colorAccent"
                    android:elevation="2dp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/image_product"/>

                <TextView
                    android:id="@+id/text_best_price_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Best price: $"
                    android:padding="4dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/text_best_price"/>

                <TextView
                    android:id="@+id/text_best_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{bestPrice != null ? Double.toString(bestPrice.total) : `Not yet computed`}"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/text_product_name"
                    app:layout_constraintStart_toEndOf="@id/text_best_price_title"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/text_best_price_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{`(` + bestPriceDate != null ? bestPriceDate : `Not yet computed` + `)`}"
                    android:textStyle="italic"
                    android:padding="4dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/text_best_price"
                    app:layout_constraintEnd_toEndOf="@id/text_best_price"/>
                <TextView
                    android:id="@+id/text_product_description_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description:"
                    android:padding="4dp"
                    app:layout_constraintTop_toBottomOf="@id/text_best_price_title"/>
                <TextView
                    android:id="@+id/text_product_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_marginBottom="5dp"
                    android:text="@{product != null ? product.description : `Not yet computed`}"
                    app:layout_constraintTop_toBottomOf="@id/text_product_description_title"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_product_price_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>